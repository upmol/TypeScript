{
  "extends": "./tsconfig-check.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "watch": false,
    "outDir": "public/scripts",
    "resolveJsonModule": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}
